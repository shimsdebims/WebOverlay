<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".MainActivity">

    <!-- Header with app logo and title -->
    <TextView
        android:id="@+id/txt_app_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDMI Capture &amp; Overlay"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- Status display section -->
    <TextView
        android:id="@+id/txt_status_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status:"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/txt_app_title"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp" />

    <TextView
        android:id="@+id/txt_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Not connected to Xibo CMS | Overlay: Stopped | Camera: Stopped"
        android:textColor="#757575"
        app:layout_constraintTop_toTopOf="@id/txt_status_label"
        app:layout_constraintStart_toEndOf="@id/txt_status_label"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp" />

    <!-- Overlay service controls -->
    <TextView
        android:id="@+id/txt_overlay_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Overlay Controls"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/txt_status"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="40dp" />

    <Button
        android:id="@+id/btn_start_overlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start Overlay"
        android:backgroundTint="#4CAF50"
        app:layout_constraintTop_toBottomOf="@id/txt_overlay_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_stop_overlay"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_stop_overlay"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop Overlay"
        android:backgroundTint="#F44336"
        app:layout_constraintTop_toTopOf="@id/btn_start_overlay"
        app:layout_constraintStart_toEndOf="@id/btn_start_overlay"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp" />

    <!-- Camera service controls -->
    <TextView
        android:id="@+id/txt_camera_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HDMI Capture Controls"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_start_overlay"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp" />

    <Button
        android:id="@+id/btn_start_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Start HDMI Capture"
        android:backgroundTint="#2196F3"
        app:layout_constraintTop_toBottomOf="@id/txt_camera_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_stop_camera"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp" />

    <Button
        android:id="@+id/btn_stop_camera"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Stop HDMI Capture"
        android:backgroundTint="#F44336"
        app:layout_constraintTop_toTopOf="@id/btn_start_camera"
        app:layout_constraintStart_toEndOf="@id/btn_start_camera"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"
        android:layout_marginStart="8dp" />

    <!-- Preview area - shows a small preview of the current display -->
    <TextView
        android:id="@+id/txt_preview_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview"
        android:textStyle="bold"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/btn_start_camera"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="32dp" />

    <FrameLayout
        android:id="@+id/preview_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#EEEEEE"
        app:layout_constraintTop_toBottomOf="@id/txt_preview_label"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_settings"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="24dp">

        <TextureView
            android:id="@+id/preview_texture"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/txt_no_preview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No preview available. Start HDMI capture first."
            android:layout_gravity="center"
            android:textColor="#757575" />
    </FrameLayout>

    <!-- Settings button at the bottom -->
    <Button
        android:id="@+id/btn_settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:backgroundTint="#607D8B"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btn_emergency_stop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EMERGENCY STOP"
        android:backgroundTint="#FF0000"
        android:textColor="#FFFFFF"
        app:layout_constraintTop_toBottomOf="@id/btn_settings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

</androidx.constraintlayout.widget.ConstraintLayout>

